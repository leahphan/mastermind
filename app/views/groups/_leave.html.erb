<%= form_for @membership, html: { method: :delete }, :url => url_for(:controller => 'memberships', :action => 'destroy') do |f| %> 
	<%= f.hidden_field :group_id, :value => @group.id %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.submit "Leave", class: "btn btn-large btn-primary" %>
<% end %>
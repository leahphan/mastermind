<%= title "Join Masterminds" %>

<%= form_for(resource, builder: FoundationFormBuilder, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= link_to image_tag("linkedin.png"), user_omniauth_authorize_path(:linkedin), :id => "sign_in" %>

  <%= f.email_field :email, autofocus: true %>
  <%= f.password_field :password, autocomplete: "off" %>
  <%= f.password_field :password_confirmation, label: "Password (again)", autocomplete: "off" %>
  <%= f.submit "Sign up" %>
<% end %>